@model IEnumerable<RhondasPlaceSite.Models.Candle>

@{
    ViewBag.Title = "Candle";
}

<div class="container">
    <div class="jumbotron-special">
        <h2>@ViewBag.Title</h2>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CandleType.CandleDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CandleSize.CandleName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Scent.ScentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lid.LidDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AddUserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastUpdateUserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Url.Content(item.Image.ImageURL)" alt="IMAGES" />
                @Html.DisplayFor(modelItem => item.Image.ImageURL)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CandleType.CandleDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CandleSize.CandleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Scent.ScentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lid.LidDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddUserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdateUserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CandleID }) |
                @Html.ActionLink("Details", "Details", new { id = item.CandleID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CandleID })
            </td>
        </tr>
    }

</table>
